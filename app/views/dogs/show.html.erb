

<div id="front-matter">


    <%= image_tag @dog.profile_photo, class: "profile-photo" %>

    <div id="heading">
        <h2 class="dog-slug"><%= @dog.slug %> </h2>
        <button class="primary-button">Follow</button>
    </div>

    

    <div id="information">
        <h1 class="dog-name"> <%= @dog.name %> </h1>

        <p class="dog-description"><%= @dog.description %></p>

        <a href="/"><%= @dog.link %></a>
    </div>

    <div id="statistics">
        <a class="statistic" href="/">
            <span class="stat-count"><%= @dog.post_count%></span>
            <span class="stat-label">posts</span>
        </a>
        <a class="statistic" href="/">
            <span class="stat-count"><%= @dog.follower_count%></span>
            <span class="stat-label">followers</span>
        </a>
        <a class="statistic" href="/">
            <span class="stat-count"><%= @dog.following_count%></span>
            <span class="stat-label">following</span>
        </a>
    </div>

</div>


<div id="posts">
    <% @dog.posts.each do |post| %>
        <div class="post-wrapper">
            <%= image_tag post.photo, class: "post-picture" %>
            <div class="post-data">
                <span>ðŸ’• <%= post.like_count %></span>
                <span>ðŸ’¬ <%= post.comment_count %></span>
            </div>
        </div>
    <% end %>
</div>

